directive @auth on FIELD_DEFINITION

type Query {
  me: User @auth
}

type Mutation {
  signup(email: String!, password: String!): Session!
  login(email: String!, password: String!): Session!
  updateUser(input: UpdateUserInput!): User! @auth
}

input UpdateUserInput {
  firstName: String
  lastName: String
}

type Session {
  token: String!
}

type User {
  id: ID!
  email: String!
  firstName: String
  lastName: String
}
